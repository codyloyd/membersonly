<!DOCTYPE html>
<html>
<head>
  <title>MembersOnly</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <a class="navbar-brand" href="/">MEMBERS ONLY</a>
      <nav>
        <ul class="navbar-nav navbar-right navbar main-nav">
          <% if logged_in? %>
            <li><%= @user.name%></li>
            <li><%= link_to "NEW POST", new_post_url%></li>
            <li><%= link_to "log out", logout_url, :method => "delete" %></li>
          <% else %>
            <li><%= link_to "log in", login_url %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </nav>

<div class="container">
  <% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
